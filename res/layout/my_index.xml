<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.testimageclient.MainActivity" >
    
       <FrameLayout
        android:id="@+id/top_bar"
        android:layout_width="390dp"
        android:layout_height="45dp"
        android:background="@drawable/topbar_background"
        android:orientation="horizontal" >
           <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@android:color/transparent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="45dp"
                android:text="我的"
                android:textColor="#1a1a1a"
                android:textSize="20sp" />
         </RelativeLayout>
    </FrameLayout>
       
       <RelativeLayout 
           android:background="#FFFFFF"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginBottom="5dp"
           >
           <com.example.testimageclient.XCRoundImageView
               android:id="@+id/my_index_login_image"
               android:layout_width="60dp"
               android:layout_height="60dp"
               android:src="@drawable/icon"
               android:scaleType="centerInside"
               android:layout_gravity="center_vertical"
              />
           <TextView
               android:textColor="#000000"
               android:textSize="18sp"
               android:id="@+id/my_index_login_text"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="70dp"
               android:layout_centerVertical="true"
           />
           </RelativeLayout>
           
           <LinearLayout 
           android:background="#FFFFFF"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:orientation="horizontal"
           android:layout_marginBottom="5dp"
           android:gravity="center_vertical">
           <TextView
               android:id="@+id/myupload"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="17sp"
               android:text="我发布的"
               android:textColor="#000"
               android:gravity="center_vertical"
               />
           <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="280dp"
            android:src="@drawable/arrow" />
           </LinearLayout>
           
           <LinearLayout 
           android:background="#FFFFFF"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:orientation="horizontal"
           android:layout_marginBottom="5dp"
           android:gravity="center_vertical">
           <TextView
               android:id="@+id/myorder"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="我的订单"
               android:textSize="17sp"
               android:textColor="#000"
               android:gravity="center_vertical"
           />
           <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="280dp"
            android:src="@drawable/arrow" />
           </LinearLayout>
           
           <LinearLayout 
           android:background="#FFFFFF"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:orientation="horizontal"
           android:layout_marginBottom="5dp"
           android:gravity="center_vertical">
           <TextView
               android:id="@+id/mysale"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="我卖出的"
               android:textSize="17sp"
               android:textColor="#000"
               android:gravity="center_vertical"
               
           />
           <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="280dp"
            android:src="@drawable/arrow" />
           </LinearLayout>
           
           <LinearLayout 
           android:background="#FFFFFF"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:orientation="horizontal"
           android:layout_marginBottom="5dp"
           android:gravity="center_vertical">
           <TextView
               android:id="@+id/mylocation"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="我的收货地址"
               android:textSize="17sp"
               android:textColor="#000"
               android:gravity="center_vertical"
               
           />
           <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="245dp"
            android:src="@drawable/arrow" />
           </LinearLayout>
           
           <LinearLayout 
           android:background="#FFFFFF"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:orientation="horizontal"
           android:layout_marginBottom="5dp"
           android:gravity="center_vertical">
           <TextView
               android:id="@+id/updatepwd"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="修改密码"
               android:textSize="17sp"
               android:textColor="#000"
               android:gravity="center_vertical"
           />
           <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="280dp"
            android:src="@drawable/arrow" />
           </LinearLayout>
           
           <LinearLayout 
           android:background="#FFFFFF"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:orientation="horizontal"
           android:layout_marginBottom="5dp"
           android:gravity="center_vertical">
           <TextView
               android:id="@+id/exit"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="退出当前账户"
               android:textSize="17sp"
               android:textColor="#000"
               android:gravity="center_vertical"
               
           />
           <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="245dp"
            android:src="@drawable/arrow" />
           </LinearLayout>
        
</LinearLayout>
